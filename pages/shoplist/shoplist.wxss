/* pages/shoplist/shoplist.wxss */
page{
  background:#f1f1f1;
}
.img{
  width:100%;
  height:380rpx;
  border-top:1rpx solid #666;
}
.img image{
  width:100%;
  height:370rpx;
}
.products{
  width:100%;
  display: flex;
  justify-content:space-between;
  align-items: center;
  flex-wrap: wrap;
}
.shop{
  width:49%;
  color:#666;
  line-height: 1.5;
  background:#fff;
}

.shop image{
  width:100%;
  height:400rpx;

}
.shop-title{
  width:100%;
  font-size:16px;
}
.shop-price{
    padding-top:10rpx;
  color:#bbb;
  font-size: 12px;
  text-decoration: line-through;
}
.new-price{

  color:#E5004B;
  font-size: 14px;
  font-weight: bold;
}